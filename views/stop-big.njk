{% set stop = stops[0] %}
{% set title %}
  {{ stop.indicator or "üöè" }}
  - {{ stop.name }}
  ({{ stop.direction or stop.bearing or "no direction or bearing" }})
{% endset %}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="/static/main.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="refresh" content="30" />
    <title>Bus Lookup: {{ title | safe }}</title>
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/static/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/static/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/static/favicon-16x16.png"
    />
    <script type="module" async>
      navigator.wakeLock.request("screen");
    </script>
  </head>

  <body class="bg-red-800 text-white">
    <div class="mx-auto max-w-xl">
      <h1 class="p-5 text-3xl font-bold text-center tracking-widest">
        {{ title | safe }}
      </h1>
      {% for service in stop.services %}
        <h2 class="p-5 text-xl font-bold">
          {{ service.route_id }} - {{ service.headsign }}Ë°å
        </h2>
        <ul class="text-6xl">
          {% for departure in service.live_departures_seconds %}
            <li class="pb-5">„ÅÇ„Å®{{ (departure / 60) | round(2) }}ÂàÜ</li>
          {% endfor %}
        </ul>
      {% endfor %}
    </div>
  </body>
</html>
